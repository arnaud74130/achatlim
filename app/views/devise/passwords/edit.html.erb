<%= render "shared/bandeau", titre: "Changez votre mot de passe", texte: "" %>
<div class="authform">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", label: "Nouveau mot de passe" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmez votre nouveau mot de passe" %>
    <%= f.submit "Changer mon mot de passe" %>
  <% end %>
</div>
