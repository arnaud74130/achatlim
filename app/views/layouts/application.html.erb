<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Achatlim" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "AchatLim" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <% if current_user && current_user.entreprise %>
        <%= current_user.email %><br/>
        <%= current_user.entreprise.nom %>, (<%= current_user.entreprise_type.upcase %>)<br/>
      <% end %>
      <%= render 'layouts/messages' %>
      <%= yield %>
    </main>
  </body>
</html>
