<h1>Listing fournisseurs</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Telephone</th>
      <th>Fax</th>
      <th>Adresse ligne1</th>
      <th>Adresse ligne2</th>
      <th>Code postal</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fournisseurs.each do |fournisseur| %>
      <tr>
        <td><%= fournisseur.nom %></td>
        <td><%= fournisseur.telephone %></td>
        <td><%= fournisseur.fax %></td>
        <td><%= fournisseur.adresse_ligne1 %></td>
        <td><%= fournisseur.adresse_ligne2 %></td>
        <td><%= fournisseur.code_postal %></td>
        <td><%= fournisseur.ville %></td>
        <td><%= link_to 'Show', fournisseur %></td>
        <td><%= link_to 'Edit', edit_fournisseur_path(fournisseur) %></td>
        <td><%= link_to 'Destroy', fournisseur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

